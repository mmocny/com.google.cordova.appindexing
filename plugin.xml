<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.google.cordova.appindexing"
    version="0.0.1">
    <name>AppIndexing</name>
    <description>Google App Indexing</description>
    <license>Apache 2.0</license>
    <keywords>cordova,google,appindexing</keywords>
    <repo></repo>

    <js-module src="www/appindexing.js" name="appindexing">
        <runs/>
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="AppIndexing" >
                <param name="android-package" value="com.google.cordova.appindexing.AppIndexing"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/android/AppIndexing.java" target-dir="src/com/google/appindexing" />
    </platform>

    <!-- browser -->
    <platform name="browser">
        <config-file target="config.xml" parent="/*">
            <feature name="AppIndexing">
                <param name="browser-package" value="AppIndexing" />
            </feature>
        </config-file>

        <js-module src="src/browser/AppIndexing.js" name="AppIndexingProxy">
            <runs />
        </js-module>
    </platform>

</plugin>
